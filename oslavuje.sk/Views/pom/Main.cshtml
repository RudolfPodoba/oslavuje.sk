@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Microsoft.Extensions.Hosting

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="sk">
<head>
    <!-- HTTPS Redirect -->
    <script src="@Url.Content("~/js/redirectHttps.js")" asp-append-version="true"></script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8EDMZ27HPC"></script>
    <script src="@Url.Content("~/js/analytics.js")" asp-append-version="true"></script>

    @await Html.PartialAsync("metaData")
    
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <base href="@(Context.Request.Scheme + "://" + Context.Request.Host + Context.Request.PathBase)/" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" href="@Url.Content($"~/css/styles.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content($"~/css/oslavuje.css")" asp-append-version="true" />
</head>
<body id="page-top">
    <!-- Navigation-->
    @await Html.PartialAsync("mainNavigation")
    <!-- Cookie-->
    @await Html.PartialAsync("_CookieConsentPartial")
    <!-- Body-->
    @RenderBody()
    <!-- Footer-->    
    @await Html.PartialAsync("footer")    
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Individual JS files -->
    <script src="@Url.Content("~/js/scripts.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/cookieConsent.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/rudolfpodoba.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/backToTop.js")" asp-append-version="true"></script>
    @* <script src="@Url.Content("~/js/changelog.js")" asp-append-version="true"></script> *@
    <!-- Lazy loading images -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js" integrity="sha512-q583ppKrCRc7N5O0n2nzUiJ+suUv7Et1JGels4bXOaMFQcamPk9HjdUknZuuFjBNs7tsMuadge5k9RzdmO+1GQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Back to Top Button -->
    <a href="#page-top" class="back-to-top" id="backToTopButton">
        <i class="fas fa-arrow-up"></i>
    </a>
</body>
</html>